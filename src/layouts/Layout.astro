---
interface Props {
  title: string;
}
import { Image } from "astro:assets";
import logo from "../assets/logo/logo-blanc.png";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/d94268f965.js"
      crossorigin="anonymous"></script>
    <title>{title}</title>
  </head>
  <body>
    <header class="bg-base-100">
      <nav class="navbar m-auto max-w-7xl">
        <div class="flex-1">
          <Image src={logo} alt="Logo gamishou" width={250} />
        </div>
        <div class="flex-none">
          <ul class="menu menu-horizontal px-1 items-center gap-4">
            <li><a>Jeux</a></li>
            <li><a>Articles</a></li>
            <li>
              <details>
                <summary
                  class="bg-primary hover:bg-primary h-16 flex items-center text-white"
                  >Mon compte</summary
                >
                <ul class="p-2 bg-white rounded-t-none">
                  <li><a>Mon profil</a></li>
                  <li><a>Connexion</a></li>
                </ul>
              </details>
            </li>
          </ul>
        </div>
      </nav>
    </header>
    <slot />
    <footer class="footer footer-center p-4 bg-base-300 text-base-content">
      <aside>
        <p>Copyright Â© 2024 - All right reserved by Gamishou</p>
      </aside>
    </footer>
  </body>
  <style is:global>
    html {
      font-family: "Open Sans", sans-serif;
      background: #13151a;
      background-size: 224px;
    }
  </style>
</html>
